<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgdelete"
            android:src="@drawable/ic_baseline_warning_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/warninig" />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/imgdelete"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_no"
            android:id="@+id/textdelete"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:text="@string/rostanxam_o_chirmoqchimisiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/yo_q"
            android:id="@+id/item_no"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintRight_toLeftOf="@id/item_yes"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="15dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/textdelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_yes"
            android:text="@string/xa"
            android:layout_marginEnd="20dp"
            android:textColor="@color/blue"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textdelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>